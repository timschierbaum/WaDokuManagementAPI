<!DOCTYPE html>
<html>
<head>
  <title>Wadokumanagementapi</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "WaDokuManagementAPI", root_path, :class => 'brand' %>
      <ul class="nav">
        <% if current_user.status == "admin" %>
          <li><%= link_to "Users", users_path, :method => :get %></li>
        <% end %>
          <li><%= link_to "Konto", edit_user_path(current_user), :method => :get %></li>
      </ul>

      <ul class="nav pull-right">
        <li><%= link_to "#{current_user.email} abmelden.", destroy_user_session_path, :method => :delete %></li>
      </ul>
    </div>
  </div>
</div>  

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <%= yield %>
    </div>
  </div>
</div>


</body>
</html>
