<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Status:</b>
  <%= form_for @user do |f| %>
  <% status = {"admin" => "admin", "editor" => "editor", "user" => "user"} %>
  <%= f.select(:status, options_for_select([["admin", "admin"], ["editor", "editor"], ["user", "user"]], status[@user.status])) %> 
</p>

<p>
  <b>Password:</b>
  <%= @user.password %>
</p>


<%= f.submit %> 
<% end %>
<%= link_to 'Back', users_path %>
