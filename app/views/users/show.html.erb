<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Status:</b>
  <%= form_for @user, :url => update_user_status_path, :method => :put  do |f| %>
  <% status = {"admin" => "admin", "editor" => "editor", "user" => "user"} %>
  <%= f.select(:status, options_for_select([["admin", "admin"], ["editor", "editor"], ["user", "user"]], status[@user.status])) %> 
</p>

<%= f.submit "Update status", :id => "update_user"%> 
<% end %>
<%= link_to 'Back', users_path %>
